---
interface Props {
  hash: string;
}
const { hash } = Astro.props;
---
<span class="inline-flex items-center gap-1.5 font-mono text-xs bg-stone-50 border border-stone-200 rounded px-2 py-1 text-stone-600"
  title="SHA-256 content hash. Verify against this repo's git history.">
  {hash.slice(0, 12)}...
  <button
    onclick={`navigator.clipboard.writeText('${hash}');this.textContent='copied';setTimeout(()=>this.textContent='copy',1500)`}
    class="text-orange-500 hover:text-orange-700 cursor-pointer ml-1"
  >copy</button>
</span>
